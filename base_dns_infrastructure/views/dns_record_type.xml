<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="dns_record_type_action" model="ir.actions.act_window">
        <field name="name">DNS Record Type</field>
        <field name="res_model">dns.record.type</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="dns_record_type_tree" model="ir.ui.view">
        <field name="name">DNS Record Type Tree</field>
        <field name="model">dns.record.type</field>
        <field name="arch" type="xml">
            <tree>
                <field name="complete_name" />
            </tree>
        </field>
    </record>

    <record id="dns_record_type_form" model="ir.ui.view">
        <field name="name">DNS Record Type</field>
        <field name="model">dns.record.type</field>
        <field name="arch" type="xml">
            <form string="DNS Record Type">

                <sheet>
                    <div class="oe_title" style="width: 390px;">
                        <label class="oe_edit_only" for="name" string="Name" />
                        <h1>
                            <field name="name" class="oe_inline" />
                        </h1>
                    </div>
                    <separator />
                    <group>
                        <group>
                            <field name="code" />
                            <field name="validate_regex" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
