<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="group_dns_user" model="res.groups">
        <field name="name">DNS User</field>
        <field name="category_id" ref="module_category_infrastructure_dns" />
        <field name="users" eval="[(4, ref('base.user_admin'))]" />
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]" />
    </record>

    <record id="group_dns_manager" model="res.groups">
        <field name="name">DNS Manager</field>
        <field name="category_id" ref="module_category_infrastructure_dns" />
        <field name="users" eval="[(4, ref('base.user_admin'))]" />
        <field
            name="implied_ids"
            eval="[
                    (4, ref('base.group_user')),
                    (4, ref('base_dns_infrastructure.group_dns_user'))]"
        />
    </record>
</odoo>
